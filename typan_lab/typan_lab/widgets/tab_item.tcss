TabItem {
  width: auto;        /* kluczowe: nie rozciÄ…gaj */
  height: 3;
  padding: 0 1;
  border: round $primary 25%;
  background: $surface;
  align: left middle;
}

TabItem.is-active {
  border: round $primary;
}

.tab-star {
  width: 2;
  content-align: center middle;
}

.tab-title {
  width: auto;
  padding: 0 1;
}

.tab-close {
  width: 3;
  min-width: 3;
  padding: 0;
}
